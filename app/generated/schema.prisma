generator client {
  provider = "prisma-client-js"
  output   = "../app/generated" // putanja gde želiš da se generiše
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  completed Boolean  @default(false)
}
